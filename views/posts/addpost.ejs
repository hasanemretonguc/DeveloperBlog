<%- include("../partials/header") %>
<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />

<section id="addPostForm">
  <div class="container">
    <form action="/post" method="post">
      <div class="form-group">
        <label for="title">Baslik: </label>
        <input
          class="form-control"
          name="title"
          type="text"
          value="Wall-E"
        />
      </div>
      <div class="form-group">
        <label for="description">Aciklama: </label>
        <input
          class="form-control"
          name="description"
          type="text"
          value="Gelecekten gelen dost canlisi bir robot"
        />
      </div>
      <div class="form-group" id="editor">
        <label for="content">Icerik: </label>
        <input
          class="form-control"
          name="content"
          type="text"
        />
      </div>
      <br>
      <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
  </div>
</section>

<!-- Include the Quill library -->
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

<!-- Initialize Quill editor -->
<script type="text/javascript" src="/richtext.js"></script>

