<%- include("../partials/header") %>
<link id="theme-style" type="text/css" rel="stylesheet" href="/assets/css/thumbnailanim.css">
<link rel="stylesheet" href="/assets/css/imageviewer.css">
<script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

<section id="addPostForm">
  <div class="container">
    <form action="/post/addpost" method="post">
      <div class="row">

        â€‹<div class="form-group hovereffect col-lg-3 col-md-3 col-sm">
          <img src="/assets/images/blog/blog-post-thumb-1.jpg" id="image" name="thumbnail_img" class="img-responsive">
          <input type="hidden" name="thumbnail" id="image_location" value="/assets/images/blog/blog-post-thumb-1.jpg" />
          <div class="overlay">
            <h2 class="btn btn-primary ml-5" id="thumbSelect">SEC</h2>
          </div>
        </div>

        <div class="form-group col-lg-9 col-md-9 col-sm">
          <label for="title">Baslik: </label>
          <input class="form-control" name="title" type="text" value="Wall-E" />

          <label for="description">Aciklama: </label>
          <input class="form-control" name="description" type="text" value="Gelecekten gelen dost canlisi bir robot" />
        </div>

      </div>

      <div id="imgPlate" class="row" style="display: none;">
        <% pictures.shift(); %>
        <% pictures.forEach((element) => { %>
        <div class="col-lg-4 col-md-4 col-6">
          <img class="img-fluid img-thumbnail d-block mb-4 thumbslct" name="imgs" src="/assets/images/blog/<%= element %>" alt="">
        </div>
        <% }) %>
      </div>

      <div class="row">

        <div class="form-group col-12" id="editor">
          <textarea name="richText"></textarea>
          <script>
            CKEDITOR.replace('richText');
          </script>
        </div>
        <br>

        <button type="submit" class="btn btn-primary col-12">Ekle</button>
      </div>
    </form>
  </div>
</section>

<script defer type="text/javascript" src="/assets/js/imageviewer.js"></script>
<%- include("../partials/footer") %>