<%- include("../partials/header") %>

<script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

<section id="addPostForm">
  <div class="container">
    <form action="/post" method="post">
      <div class="form-group">
        <label for="title">Baslik: </label>
        <input class="form-control" name="title" type="text" value="Wall-E" />
      </div>
      <div class="form-group">
        <label for="description">Aciklama: </label>
        <input class="form-control" name="description" type="text" value="Gelecekten gelen dost canlisi bir robot" />
      </div>
      <div class="form-group" id="editor">
        <label for="content">Icerik: </label>
        <textarea name="richText"></textarea>
        <script>
          CKEDITOR.replace( 'richText' );
        </script>
      </div>
      <br>
      <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
  </div>
</section>

<%- include("../partials/footer") %>